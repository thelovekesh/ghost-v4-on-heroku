{{!< default}}
{{#contentFor "lang"}}en{{/contentFor}}
<main class="gh-main gh-outer">
    <div class="gh-inner">
        <section class="gh-topic gh-topic-grid">
            <h2 class="gh-topic-name">
                {{#match pagination.pages ">" 1}}
                    <a href="{{@site.url}}/page/2">Latest</a>
                {{else}}
                    Latest
                {{/match}}
            </h2>

            <div class="gh-topic-content">
                {{#get "posts" include="authors,tags" limit="7" filter="tag:-hash-de"}}
                    {{#foreach posts}}
                        {{> "loop-grid"}}
                    {{/foreach}}
                {{/get}}
            </div>

            <footer class="gh-topic-footer">
                {{#match pagination.pages ">" 1}}
                    <a class="gh-topic-link" href="{{@site.url}}/page/2">Show more {{> "icons/arrow"}}</a>
                {{/match}}
            </footer>
        </section>

        {{#get "tags" filter="name:Development"}}
            {{#foreach tags}}
                {{tags}}
                    {{> "topic-grid"}}
            {{/foreach}}
        {{/get}}
        {{#get "tags" filter="name:Design"}}
            {{#foreach tags}}
                {{tags}}
                    {{> "topic-grid"}}
            {{/foreach}}
        {{/get}}
        {{#get "tags" filter="name:Startup"}}
            {{#foreach tags}}
                {{tags}}
                    {{> "topic-grid"}}
            {{/foreach}}
        {{/get}}
        {{#get "tags" filter="name:Team"}}
            {{#foreach tags}}
                {{tags}}
                    {{> "topic-grid"}}
            {{/foreach}}
        {{/get}}
        {{#get "tags" filter="name:'Company Culture'"}}
            {{#foreach tags}}
                {{tags}}
                    {{> "topic-grid"}}
            {{/foreach}}
        {{/get}}
    </div>
</main>