<section class="gh-topic gh-topic-grid">
    <h2 class="gh-topic-name">
        <a>{{name}}</a>
    </h2>

    <div class="gh-topic-content">
        {{#get "posts" include="tags,authors" filter="tag:{{slug}}+tag:de" limit="all"}}
            {{#foreach posts}}
                {{> "loop-grid"}}
            {{/foreach}}
        {{/get}}
    </div>
</section>