{{!< default}}
{{#contentFor "lang"}}de{{/contentFor}}
<main class="home-template gh-main gh-outer">
    <div class="gh-inner">
        <section class="gh-topic gh-topic-grid">
            <h2 class="gh-topic-name">
                {{#match pagination.pages ">" 1}}
                    <a href="{{@site.url}}/page/2">Neueste</a>
                {{else}}
                    Neuestes
                {{/match}}
            </h2>

            <div class="gh-topic-content">
                {{#get "posts" include="authors,tags" limit="7" filter="tag:de"}}
                    {{#foreach posts}}
                        {{> "loop-grid-de"}}
                    {{/foreach}}
                {{/get}}
            </div>
        </section>
            {{#get "tags"}}
                {{#foreach tags}}
                 {{tags}}
                    {{> "topic-grid-de"}}
                {{/foreach}}
            {{/get}}
    </div>
</main>