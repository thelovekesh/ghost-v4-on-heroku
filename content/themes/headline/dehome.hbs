{{!< dedefault}}

<main class="home-template gh-main gh-outer">
    <div class="gh-inner">
        <section class="gh-topic gh-topic-grid">
            <h2 class="gh-topic-name">
                {{#match pagination.pages ">" 1}}
                    <a href="{{@site.url}}/page/2">Neueste</a>
                {{else}}
                    Neuestes
                {{/match}}
            </h2>

            <div class="gh-topic-content">
                {{#get "posts" include="authors" limit="7" filter="tag:de"}}
                    {{#foreach posts}}
                        {{> "loop-grid-de"}}
                    {{/foreach}}
                {{/get}}
            </div>

            <footer class="gh-topic-footer">
                {{#match pagination.pages ">" 1}}
                    <a class="gh-topic-link" href="{{@site.url}}/page/2">Zeig mehr {{> "icons/arrow"}}</a>
                {{/match}}
            </footer>
        </section>
    </div>
</main>